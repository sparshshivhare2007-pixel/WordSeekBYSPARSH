{
  "name": "WordSeek Bot",
  "description": "Telegram Word Game Bot (Heroku Deployment)",
  "stack": "container",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token (from @BotFather)",
      "required": true
    },
    "DATABASE_URL": {
      "description": "PostgreSQL Connection URL (Supabase)",
      "required": true
    },
    "REDIS_URI": {
      "description": "Redis URL (Upstash)",
      "required": false
    },
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production",
      "required": false
    },
    "ADMIN_USERS": {
      "description": "Comma-separated admin Telegram user IDs",
      "required": false
    },
    "SUGGESTIONS_CHANNEL": {
      "description": "Channel ID / Link for suggestions",
      "required": false
    },
    "LOGS_CHANNEL": {
      "description": "Logs Channel ID / Link",
      "required": false
    }
  }
}
